{{!-- <h2>Undevoured Burgers</h2> --}}
<div class="row">
  <div class="col-6" class="aclonica">
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{!-- {{> cats/cat-block sleep=true}} --}}
      <li>
        {{burger_name}}

        {{!-- <button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		{{#if sleep}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
	</button> --}}

        <button class="devour-burger" data-id="{{this.id}}">DEVourE!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  {{!-- <h2>Devoured Burgers</h2> --}}
  <div class="col-6" class="aclonica">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{burger_name}} <br>
      {{!-- {{> cats/cat-block sleep=false}} --}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

